name:                chi
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/jqyu/chi#readme
license:             BSD3
license-file:        LICENSE
author:              James Yu
maintainer:          james.yu@bustle.com
copyright:           2016 James Yu
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Bustle.Env

                     , Bustle.Data.Post
                     , Bustle.Data.User

                     , Bustle.DataSource.Graph

                     , Bustle.QL
                     , Bustle.QL.API.Bustle
                     , Bustle.QL.Interfaces
                     , Bustle.QL.Scalars
                     , Bustle.QL.Schema

                    --  , Bustle.Secret

                     , Rad.Graph.Structure

                     , Rad.QL
                     , Rad.QL.AST
                     , Rad.QL.Parser
                     , Rad.QL.Query
                     , Rad.QL.Types

                     , Rad.QL.Define
                     , Rad.QL.Define.Enum
                     , Rad.QL.Define.Field
                     , Rad.QL.Define.Interface
                     , Rad.QL.Define.Introspection
                     , Rad.QL.Define.Object
                     , Rad.QL.Define.Scalar
                     , Rad.QL.Define.Schema
                     , Rad.QL.Define.Union
                     , Rad.QL.Define.Util

                     , Rad.QL.Internal.Builders
                     , Rad.QL.Internal.GEnum
                     , Rad.QL.Internal.GUnion
                     , Rad.QL.Internal.Types

  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , amazonka
                     , amazonka-dynamodb
                     , async
                     , attoparsec
                     , bytestring
                     , bytestring-trie
                     , containers
                     , hashable
                     , haxl
                     , hedis
                     , lens
                     , mtl
                     , pipes
                     , scientific
                     , semigroups
                     , text
                     , transformers
                     , unordered-containers
                     , word8

  default-language:    Haskell2010
  -- because it's 2k fuckin 16 and we ready for GHC8
  default-extensions:  ApplicativeDo
                     , DeriveGeneric
                     , DuplicateRecordFields
                     , DisambiguateRecordFields
                     , ExistentialQuantification
                     , FlexibleContexts
                     , FlexibleInstances
                     , GADTs
                     , MultiParamTypeClasses
                     , NamedFieldPuns
                     , StandaloneDeriving
                     , TypeFamilies
                     , TypeSynonymInstances
                     , OverloadedStrings

executable chi-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -O2 -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , aeson
                     , bytestring
                     , chi
                     , haxl
                     , scotty
                     , text
                     , transformers
                     , wai
                     , wai-extra
  default-language:    Haskell2010

test-suite chi-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , chi
                     , hspec
                     , hspec-wai
                     , hspec-wai-json
                     , aeson
  ghc-options:         -threaded -O2 -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/jqyu/chi
